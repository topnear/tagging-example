<div class="row">
	<%= show_errors("danger", @article.errors.messages) unless @article.errors.nil? %>
	<div class="col-xs-6 col-xs-offset-3">
		<h1>Edit Article</h1>
		<%= form_for @article, url: article_path(@article) do |f|%>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", placeholder: "Enter your title" %>
			</div>
			<div class="form-group">
				<%= f.label :content %>
				<%= f.text_area :content, class: "form-control", rows: "15", placeholder: "Enter your content"  %>
			</div>
			<%= f.button "Update Article", class: "btn btn-success" %>
		<% end %>
	</div>
</div>